{{page-title 'Home'}}
<nav class='navbar navbar-expand-lg bg-body-tertiary'>
  <div class='container-fluid'>
    <div class='collapse navbar-collapse' id='navbarNavDropdown'>
      <ul class='navbar-nav'>
        <li class='nav-item'>
          <button
            class='btn btn-primary mx-1'
            type='button'
            value='en-us'
            aria-label='english'
            {{on 'click' this.onSetLanguage}}
          >English</button>
        </li>
        <li class='nav-item'>
          <button
            class='btn btn-primary mx-1'
            type='button'
            value='pl-pl'
            aria-label='polish'
            {{on 'click' this.onSetLanguage}}
          >Polski</button>
        </li>
        <li class='nav-item'>
          <button
            class='btn btn-primary mx-1'
            type='button'
            value='pl-pl'
            aria-label='light mode'
            {{on 'click' this.setDarkMode}}
          >{{t 'product.dark_mode'}}</button>
        </li>
        <li class='nav-item'>
          <button
            class='btn btn-primary mx-1'
            type='button'
            value='pl-pl'
            aria-label='light mode'
            {{on 'click' this.setLightMode}}
          >{{t 'product.light_mode'}}</button>
        </li>
        <li class='nav-item'>
          Today:
          {{format-date this.today}}
        </li>

      </ul>
    </div>
  </div>
</nav>

<div class='container'>
  <section aria-label='product list'>
    {{outlet}}
  </section>
</div>