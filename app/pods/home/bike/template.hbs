{{page-title 'Bike'}}
<LinkTo @route='home' class='btn btn-primary my-2' aria-label='back to menu'>
  {{t 'general.back'}}
</LinkTo>

<ProductAdd />
<article>
  <h1>{{t 'product.bike.name'}}</h1>
  <div class='card mb-3'>
    <div class='row g-0'>
      <div class='col-md-4'>
        <img
          src='https://erharowery.pl/wp-content/uploads/2021/07/Rower-miejski-KANDS-Escape-26-3BN-alu-3-biegi-mietowo-bialy-mat-scaled.jpg'
          class='img-fluid rounded-start'
          alt='bike'
        />
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h2 class='card-title'>{{t 'product.bike.name'}}</h2>
          <p class='card-text'>{{t 'product.bike.description_extended'}}</p>
        </div>
      </div>
    </div>
  </div>
</article>