{{page-title 'Car'}}

<LinkTo @route='home' class='btn btn-primary my-2' aria-label='back to menu'>
  {{t 'general.back'}}
</LinkTo>

<ProductAdd />
<h1 class='text-center'>{{t 'product.car.name'}}</h1>
<section itemtype='https://schema.org/Product'>
  <div class='card mb-3'>
    <div class='row g-0'>
      <div class='col-md-4'>
        <img
          src='https://bi.im-g.pl/im/a4/50/1b/z28639652Q,Cupra-Formentor-VZ5-Taiga-Grey.jpg'
          class='img-fluid rounded-start'
          itemprop='image'
        />
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h2 class='card-title' itemprop='name'>{{t 'product.car.name'}}</h2>
          <p class='card-text' itemprop='description'>{{t
              'product.car.description_extended'
            }}</p>
          <div
            itemprop='aggregateRating'
            itemscope
            itemtype='https://schema.org/AggregateRating'
          >
            <p class='card-text' itemprop='ratingValue'>9/10*</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>